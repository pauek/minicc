{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Makefile",
            "type": "shell",
            "command": "make",
            "args": [
                "debug",
                "-j8"
            ],
            "problemMatcher": {
                "base": "$gcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false,
                "close": true,
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "make",
            "args": [
                "test"
            ],
            "problemMatcher": [],
            "dependsOn": "Makefile",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
